body
	background color-bg
	font font-main
	min-width 260px
	letter-spacing 0.1px
	font-weight 400

// main header
.main-header
	background color-panel-main
	box-shadow 0 2px 4px 0 rgba(51,51,51,.4)
	color color-text-panel
	text-align center
	position relative

	&__link
		display inline-block
		color color-text-panel
		font-size 13px
		text-decoration none
		padding 12px 11px 0 11px
		position relative
		vertical-align top

		&::after
			content ''
			display block
			width 2px
			border-radius 1px
			background #448ccb
			height 24px
			position absolute
			top 9px
			right 0

		&.pull-right:nth-child(4),
		&.pull-left:last-child,
		&.collapsed
				&::after
					display none


		&.collapsed
			background color-panel-main
			display none
			float right
			height 30px
			padding 6px 10px 0 10px
			position absolute
			left 40px
			text-align left
			top 40px
			width 150px
			z-index 4

		&.active
			display block

	&__collapse-actions
		visibility hidden
		display inline-block
		color color-text-panel
		font-size 13px
		text-decoration none
		vertical-align top
		padding 12px 7px 0 7px
		float left

		&.active
			visibility visible

	&__menu-button
		padding 9px 11px 0 11px

	&__heading
		display inline-block
		font-size 16px
		font-weight 400
		margin 0 auto
		line-height 40px
		text-align center
		width 150px

//banner
.banner
	padding 0 8px

	@media screen and (max-width: 320px) {
		display none
	}

//slider
.slider
	box-shadow 0 2px 8px 0 rgba(0,0,0,.3)
	display block
	margin 10px 0 0 0
	overflow hidden
	padding 0
	position relative
	width 100%


	&__list-wrap
		width 100%
		height auto

	//slider__list
	&__list
		height auto
		list-style none
		margin 0
		padding 0
		position relative
		width 100%

	//slider__item
	&__item
		left 0
		position absolute
		top 0
		width 100%
		z-index 0

		&.active
			position relative
			z-index 1

		&.inslide
			z-index 2

		//slider__item-content
		&-content
			background rgba(51,51,51,.8);
			bottom 0
			color color-text-panel
			padding 15px 15px 25px 15px
			position absolute
			width 100%
			z-index 3

		&-heading
			font-size 22px
			font-weight 600
			line-height 27px
			margin 0

			@media screen and (max-width: screen-sm)
				font-size 18px

			@media screen and (max-width: screen-sm)
				font-size 16px

		&-description
			font-size 13px
			line-height 16px
			margin 0
			width 50%
			
			@media screen and (max-width: screen-sm)
				font-size 12px
				width 100%

	//slider__pic
	&__pic
		display block
		width 100%


	//slider__dots
	&__dots
		bottom 10px
		display block
		line-height 10px
		list-style none
		margin 0
		padding 0
		position absolute
		text-align center
		width 100%
		z-index 3

		&-item
			display inline-block
			height auto
			width auto

			&.active a,
			&:hover a
				background #fff

		&-link
			border 1px solid #fff
			border-radius 50%
			cursor pointer
			display block
			height 10px
			margin 0 3px
			width 10px

//offers
.offers
	margin 10px 0 0 0

//tabs
.tabs

	&__controls
		list-style none
		margin 0
		padding 0
		text-align center
		width 100%

		&-item
			border 1px solid color-panel-main
			border-left 0
			color color-panel-main
			cursor pointer
			display inline-block
			min-width 90px
			width 16.6666668%

			&:first-child
				border-left 1px solid color-panel-main
				border-radius 4px 0 0 4px

			&:last-child
				border-radius 0 4px 4px 0

			&.active
				background color-panel-main
				color color-text-panel

			@media screen and (max-width: 480px)
				width 100%
				border 0

				&:first-child,
				&:last-child
					border 0
					border-radius 0


		&-link
			color inherit
			display block
			font-size 13px
			height 100%
			line-height 28px
			text-align center
			text-decoration none
			width 100%

	//tabs__item
	&__list
		list-style none
		padding 0
		margin 10px 0 0 0

	&__item
		clearfix()
		display none
		width 100%

		&.active
			display block

//offer
.offer
	background color-panel-sec
	box-shadow 0 2px 8px 0 rgba(0,0,0,.3)
	display block
	float left
	margin 0 0 8px 1.0416666667%
	min-height 75px
	position relative
	width 48.4375%

	@media screen and (max-width: screen-sm)
		margin 0 1.25% 8px 1.25%
		width 97.5%

	&:last-child
		margin-right 1.0416666667%

	//offer__main
	&__main
		min-height 75px

	//offer__logo
	&__logo
		float left
		padding 10px

	//offer__pic
	&__pic
		display inline-block
		height 55px
		margin 0
		padding 0
		vertical-align bottom
		width 55px

	//offer__content
	&__content
		bottom 0
		left 75px
		padding 6px 10px 10px 0
		position absolute
		right 80px
		top 0
		height 75px

	//offer__cost
	&__cost
		background #19487f
		color color-text-panel
		cursor pointer
		float right
		font-size 20px
		height 75px
		line-height 75px
		text-align center
		width 80px

	//offer__text
	&__text
		$font-size = 15px
		$line-height = 1.2666666667
		$lines-of-show = 2
		-webkit-box-orient vertical
		-webkit-line-clamp $lines-of-show
		display -webkit-box
		display block
		font-size $font-size
		height auto
		max-height $font-size*$line-height*$lines-of-show
		line-height $line-height
		margin-bottom 7px
		overflow hidden
		text-overflow ellipsis

	&__info
		clearfix()
		font-size 13px
		height auto
		list-style none
		max-width 270px
		width 100%
		padding 0
		position relative

		li
			border-right 2px solid #dbdbdb
			display inline-block
			padding 0 7px
			vertical-align top
			float left

			&:first-child
				padding-left 0

			&:last-child
				border-right 0
				padding-right 0

		&-status
			color #5096b4
			float left
			font-size 13px
			font-weight 600
			text-transform uppercase
			width 19%

		&-type,
		&-duration
			color color-text-second
			white-space nowrap
			overflow hidden
			text-overflow ellipsis


		&-type
			overflow hidden
			text-align center
			text-overflow ellipsis
			white-space nowrap
			width 50%
			float left

			a
				text-decoration none
				color inherit
				vertical-align top

			&:hover
				text-decoration underline

		&-duration
			width 28%
			max-width 60px;

	&.active

		.offer__cost
			display none

		.offer__additional
			display block

		.offer__additional-hide
			display block

	&__additional
		background #fff
		box-shadow 0 3px 3px 0px rgba(0,0,0,.2)
		display none
		margin 0 0 8px 0
		padding 0 15px
		position absolute
		top 75px
		width 100%
		z-index 4

		@media screen and (max-width: 640px)
			box-shadow none
			margin 0
			position relative
			top 0

		&-hide
			cursor pointer
			display none
			margin 10px 10px 0 0
			position absolute
			right 0

		&-list
			clear both
			list-style none
			padding 0

			& b
				color color-text-second
				font-weight 600
				margin-right 5px

		&-delete
			color #c62c1c
			display block
			font-size 13px
			margin 10px 0
			text-decoration none
			width 100%

		&-button
			background linear-gradient(top, #df5b39 0%,#c73f28 100%)
			border 1px solid #d23722
			border-radius 2px
			box-shadow 0 1px 4px 0 rgba(0,0,0,.25),
								 0 2px 0 0 #d23722,
								 0 3px 0 0 #c73f28
			color #fff
			font-size 20px
			font-weight 600
			margin-bottom 15px
			padding 10px 0
			width 100%

//footer
.main-footer
	width 100%
	background #fff
	display block

	&__missing-coins
		color color-text-second
		font-size 12px
		margin 0 0 0 10px
		padding 5px 0